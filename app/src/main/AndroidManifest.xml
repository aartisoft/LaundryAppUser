<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cleanandcomfort.smtrick.user_laundryapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/laundrylogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/applogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.cleanandcomfort.smtrick.user_laundryapp.Activities.Update_Relative_Activity" />
        <activity
            android:name="com.cleanandcomfort.smtrick.user_laundryapp.Activities.SplashScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cleanandcomfort.smtrick.user_laundryapp.Activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.cleanandcomfort.smtrick.user_laundryapp.Activities.MainActivity_User"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.cleanandcomfort.smtrick.user_laundryapp.Activities.SignupActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.cleanandcomfort.smtrick.user_laundryapp.Activities.ResetPasswordActivity"
            android:label="@string/title_activity_reset_password"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.cleanandcomfort.smtrick.user_laundryapp.Fragments.Recyclerfragment"
            android:label="@string/title_activity_reset_password"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.cleanandcomfort.smtrick.user_laundryapp.Activities.LoginActivity"
            android:label="@string/title_activity_reset_password"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.cleanandcomfort.smtrick.user_laundryapp.Activities.ShowImagesActivity" />
        <activity android:name="com.cleanandcomfort.smtrick.user_laundryapp.Activities.SubCatalogActivity" />
        <activity android:name="com.cleanandcomfort.smtrick.user_laundryapp.Activities.UserDetailsActivity" />
        <activity android:name="com.cleanandcomfort.smtrick.user_laundryapp.Activities.Add_Updatelead__bankresult_Activity" />
        <activity android:name="com.cleanandcomfort.smtrick.user_laundryapp.Activities.Update_user_profile_activity" />
        <activity android:name="com.cleanandcomfort.smtrick.user_laundryapp.Activities.View_Member_Report_Activity" />
        <activity android:name="com.cleanandcomfort.smtrick.user_laundryapp.Activities.Send_Request_Activity"
            android:theme="@style/AppTheme.Transparent"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name="com.cleanandcomfort.smtrick.user_laundryapp.Activities.Advertise_Activity" />
        <activity
            android:name="com.cleanandcomfort.smtrick.user_laundryapp.Activities.sharedtransitionActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />

        <service android:name="com.cleanandcomfort.smtrick.user_laundryapp.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name="com.cleanandcomfort.smtrick.user_laundryapp.Activities.ImagePickerActivity"
            android:label="Pick Image" />
        <activity
            android:name="com.cleanandcomfort.smtrick.user_laundryapp.Activities.CropImageActivity"
            android:label="Crop Image" />
        <activity android:name="com.cleanandcomfort.smtrick.user_laundryapp.Activities.dummyActivity" />

        <uses-library android:name="org.apache.http.legacy" android:required="false"/>
        <meta-data android:name="com.google.firebase.messaging.default_notification_icon"

            android:resource="@drawable/laundrynotificationlogo" />

    </application>

</manifest>