<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smartloan.smtrick.user_laundryapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/laundry"
        android:label="@string/app_name"
        android:roundIcon="@drawable/applogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.smartloan.smtrick.user_laundryapp.Update_Relative_Activity" />
        <activity
            android:name="com.smartloan.smtrick.user_laundryapp.SplashScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smartloan.smtrick.user_laundryapp.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.smartloan.smtrick.user_laundryapp.MainActivity_User"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.smartloan.smtrick.user_laundryapp.SignupActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.smartloan.smtrick.user_laundryapp.ResetPasswordActivity"
            android:label="@string/title_activity_reset_password"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.smartloan.smtrick.user_laundryapp.Recyclerfragment"
            android:label="@string/title_activity_reset_password"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.smartloan.smtrick.user_laundryapp.LoginActivity"
            android:label="@string/title_activity_reset_password"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.smartloan.smtrick.user_laundryapp.ShowImagesActivity" />
        <activity android:name="com.smartloan.smtrick.user_laundryapp.SubCatalogActivity" />
        <activity android:name="com.smartloan.smtrick.user_laundryapp.UserDetailsActivity" />
        <activity android:name="com.smartloan.smtrick.user_laundryapp.Add_Updatelead__bankresult_Activity" />
        <activity android:name="com.smartloan.smtrick.user_laundryapp.Update_user_profile_activity" />
        <activity android:name="com.smartloan.smtrick.user_laundryapp.View_Member_Report_Activity" />
        <activity android:name="com.smartloan.smtrick.user_laundryapp.Send_Request_Activity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name="com.smartloan.smtrick.user_laundryapp.Advertise_Activity" />
        <activity
            android:name="com.smartloan.smtrick.user_laundryapp.sharedtransitionActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />

        <service android:name="com.smartloan.smtrick.user_laundryapp.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name="com.smartloan.smtrick.user_laundryapp.ImagePickerActivity"
            android:label="Pick Image" />
        <activity
            android:name="com.smartloan.smtrick.user_laundryapp.CropImageActivity"
            android:label="Crop Image" />
        <activity android:name="com.smartloan.smtrick.user_laundryapp.dummyActivity" />
    </application>

</manifest>